{
  "expo": {
    "name": "ToDo",
    "slug": "Simple_ToDo_App",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover"
    },
    "androidStatusBar": {
      "hidden": false, 
      "translucent": true, 
      "barStyle": "light-content", 
      "backgroundColor": "#00000000",
      "animated" : true
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.devjs.todo",
      "buildNumber": "1.0.0",
      "supportsTablet": true
    },
    "android": {
      "package": "com.devjs.todo",
      "versionCode": 1
    }
  }
}
